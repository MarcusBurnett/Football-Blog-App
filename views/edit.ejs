<% include partials/header %>


<div class="container newPost">
        <h1>Edit Post</h1>

        <form action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
        <div class="newFormContainer1">

            <div class="form-group">
                <label>Title</label>
                <input class="form-control form-control-lg" type="text" name="blog[title]" placeholder="Enter" value="<%=blog.title %>">
            </div>
            <div class="form-group">
                <label>Image</label>
                <input class="form-control form-control-lg" type="text" name="blog[image]" placeholder="Enter" value="<%=blog.image %>">
            </div>
        </div>
            <div class="form-group content">
                <label>Content</label>
                <textarea class="form-control form-control-lg" type="text" name="blog[body]" required placeholder="Enter text"><%=blog.body %></textarea>
    
                <input class="btn btn-lg submitBtn" type="submit">
    
            </div>
        </form>
    </div>

<% include partials/footer %>

